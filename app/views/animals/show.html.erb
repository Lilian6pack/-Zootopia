

<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-6 offset-3">
    <div class="card-product mb-3">
      <%= cl_image_tag @animal.photo_url.key, height: 300, width: 400, crop: :fill %>
      <div class="card-product-infos">
      <h1 class="card-title"><%= @animal.name %></h1>
      <p class="card-text"><%=@animal.description%></p>
      <p class="price-show"><%=@animal.daily_price%> â‚¬</p>
      </div>
    </div>
  
  
      
      <% if @animal.user == current_user %>
      <%= link_to animal_path(@animal), method: "delete", class: 'btn btn-outline-danger rounded' do %> Delete <i class="far fa-trash-alt"></i><%end%>
      <%=link_to edit_animal_path(@animal), class: 'btn btn-outline-primary' do %>Edit <i class="far fa-edit"></i><%end%>
      <%= link_to  animals_path, class: 'btn btn-outline-primary' do %>Voir mes annonces <i class="far fa-eye"></i><%end%>
    <% else %>
      <%=link_to "Reserve", new_animal_booking_path(@animal), class: 'btn btn-primary' %>
    <%end%>
    </div>
  </div>
</div>

