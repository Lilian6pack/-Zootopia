<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://i.pinimg.com/originals/c7/48/b5/c748b52f3d5c8cb49b1eb060bb01d0c0.jpg", class:"shadow-lg rounded-circle border border-success" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% unless controller_name == "pages" && action_name == "home" %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
        <% end %>
        <% unless controller_name == "animals" && action_name == "index" %>
          <li class="nav-item">
            <%= link_to "Voir les animaux", animals_path, class: "nav-link" %>
          </li>
        <% end %>
        <li class="nav-item dropdown">
          <%= image_tag current_user.url_photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Modif password", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
        <%= image_tag "https://www.cdiscount.com/pdt2/3/2/3/1/700x700/auc8518800231323/rw/patch-ecusson-thermocollant-point-d-interrogation.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
            <%= link_to "Password", new_user_password_path, class: "nav-link" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
