<div class="container text-center mt-5">
  <h1> Your bookings </h1>

  <div class="row">
    <% @bookings.each do |booking| %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card text-center mt-5">
            <img src="<%= booking.animal.photo_url%>" class="card-img-top" alt="...">
            <div class="card-description">
              <h3> Your animal is <%= booking.animal.name %></h3>
              <p>NÂ° of your booking : <%= booking.id %></p>
              <p>From <%= booking.start_date %></p>
              <p>To <%= booking.end_date %></p>
              <%= link_to "Booking details", animal_booking_path(booking.animal.id,booking.id), class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
