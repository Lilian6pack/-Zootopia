<div class="container text-center mt-5">
  <h1> Vos reservations </h1>

  <div class="row">
    <% @bookings.each do |booking| %>
        <div class="col-12 col-md-6 col-lg-3">
          <div class="card text-center mt-5">
           <%= cl_image_tag booking.animal.photo_url.key, height: 300, width: 400, crop: :fill %>
            <div class="card-description">
              <h3> Votre animal est <%= booking.animal.name %></h3>
              <p>N° de reservation : <%= booking.id %></p>
              <p>Du <%= booking.start_date %></p>
              <p>Au <%= booking.end_date %></p>
              <%= link_to "Voir détails", animal_booking_path(booking.animal.id,booking.id), class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
